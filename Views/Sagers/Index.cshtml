@model IEnumerable<Hovedliste.Models.Sager>

@{
    ViewData["Title"] = "Index";
}

<h1>Hovedliste</h1>

<div class="navbar">
    <form asp-controller="Sagers" asp-action="Index">
        <p>
            <input type="text" placeholder="Search.." name="SearchString">&nbsp;&nbsp;
            <input type="submit" value="Filter" />
        </p>
    </form>
    <div class="dropdown">
        &nbsp;&nbsp;
        <button class="dropbtn">Filtering</button>
        <div class="dropdown-content">
            <a href="#">Rating</a>
            <a href="#">Semester</a>
            <a href="#">Et eller andet godt</a>
        </div>
    </div>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Billede)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emne)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tekst)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fag)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Billede)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Emne)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tekst)
                </td>
                <th>
                    @Html.DisplayFor(modelItem => item.Fag)
                </th>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
